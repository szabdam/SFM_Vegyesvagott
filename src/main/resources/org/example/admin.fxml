<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.frontend.AdminController">

    <!-- Bal oldali menü -->
    <left>
        <VBox prefWidth="140.0" spacing="10.0" style="-fx-background-color: #F5F5F5;">
            <padding>
                <Insets bottom="20" left="10" right="10" top="20" />
            </padding>
            <children>
                <Button fx:id="btnAutomatak" maxWidth="Infinity" onAction="#handleAutomatakMenu" text="Automaták" />
                <Button fx:id="btnCsomagok" maxWidth="Infinity" onAction="#handleCsomagokMenu" text="Csomagok" />
            </children>
        </VBox>
    </left>

    <!-- Középső rész: kereső + táblázat -->
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>

                <!-- Felső sor: kereső + gombok -->
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="tfKereses" promptText="Kereső..." HBox.hgrow="ALWAYS" />

                        <Button fx:id="btnSzures" onAction="#handleSzures" text="Szűrés" />
                        <Button fx:id="btnAttekintes" onAction="#handleAttekintes" text="Áttekintés" />
                        <Button fx:id="btnModositas" onAction="#handleModositas" text="Módosítás" />
                    </children>
                </HBox>

                <!-- Automaták táblázata -->
                <TableView fx:id="tableAutomatak" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCim" prefWidth="250.0" text="Cím" />
                        <TableColumn fx:id="colTelitettseg" prefWidth="120.0" text="Telítettség" />
                        <TableColumn fx:id="colSzabad" prefWidth="140.0" text="Szabad rekeszek" />
                        <TableColumn fx:id="colAllapot" prefWidth="80.0" text="Állapot" />
                    </columns>
                </TableView>

            </children>
        </VBox>
    </center>

    <!-- Jobb oldali "Karbantartás" panel -->
    <right>
        <AnchorPane prefWidth="200.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #CCCCCC;">
            <children>
                <Label fx:id="lblKarbantartas" layoutX="20.0" layoutY="20.0" text="Karbantartás" />
                <!-- ide jöhetnek majd karbantartási gombok, státuszok stb. -->
            </children>
        </AnchorPane>
    </right>

</BorderPane>